<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<!-- inherit from web assets backend -->
	<template id="assets_backend" inherit_id="web.assets_backend">
		<xpath expr="." position="inside">
			<link rel="stylesheet" href="/aloxa_manzano/static/src/css/multi_dimension_table.css" />
			
			<script type="text/javascript" src="/aloxa_manzano/static/src/js/MultiDimensionTable.js"></script>
		</xpath>
	</template>
	
	
	<!-- WIZARD SALE PRICES -->
	<record model="ir.ui.view" id="manzano_wizard_mdtable_sale_import_data_form_view">
        <field name="name">wizard.form</field>
        <field name="model">manzano.wizard.mdtable</field>
        <field name="arch" type="xml">
            <form string="Import Sale Prices Data">
                <group>
                    <field name="prices_table_file" required="True"/>
                </group>
                <footer>
                	<button name="import_sale_prices_from_file" type="object"
						string="Import" class="oe_highlight"/>
					or
					<button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="launch_manzano_wizard_mdtable_sale_import_data"
                name="Import Sale Prices Data"
                res_model="manzano.wizard.mdtable"
                view_mode="form"
                view_id="aloxa_manzano.manzano_wizard_mdtable_sale_import_data_form_view"
                target="new"
                key2="client_action_multi"/>
                
